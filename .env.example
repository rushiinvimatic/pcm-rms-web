# PMCRMS Environment Variables

# API Configuration
VITE_API_URL=http://localhost:5012/api
VITE_APP_NAME=PMCRMS
VITE_APP_VERSION=1.0.0

# Authentication
VITE_JWT_SECRET=your-jwt-secret-here
VITE_OTP_EXPIRY_MINUTES=5
VITE_SESSION_TIMEOUT_MINUTES=30

# File Upload
VITE_MAX_FILE_SIZE_MB=2
VITE_ALLOWED_FILE_TYPES=.pdf,.jpg,.jpeg,.png

# Payment Gateway (Easebuzz)
VITE_EASEBUZZ_MERCHANT_KEY=your-merchant-key
VITE_EASEBUZZ_SALT=your-salt-key
VITE_EASEBUZZ_ENV=test # or 'prod' for production

# HSM Configuration
VITE_HSM_ENDPOINT=https://hsm.example.com/api
VITE_HSM_CERTIFICATE_PATH=/certificates
VITE_HSM_SIGNATURE_ALGORITHM=SHA256withRSA

# Email Configuration
VITE_SMTP_HOST=smtp.example.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=noreply@pmcrms.com
VITE_FROM_EMAIL=PMCRMS <noreply@pmcrms.com>

# Application Configuration
VITE_ORGANIZATION_NAME=Pune Municipal Corporation
VITE_SUPPORT_EMAIL=support@pmcrms.com
VITE_SUPPORT_PHONE=+91-20-12345678

# Feature Flags
VITE_ENABLE_GUEST_DOWNLOAD=true
VITE_ENABLE_BULK_OPERATIONS=false
VITE_ENABLE_ADVANCED_SEARCH=true
VITE_ENABLE_ANALYTICS=false

# Development
VITE_DEBUG_MODE=true